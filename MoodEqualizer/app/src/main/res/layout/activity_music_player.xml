<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="80dp"
        android:clickable="true"
        android:id="@+id/bottom_layout"
        android:orientation="vertical"
        android:focusable="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#000000"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/to_music_list_btn"
                    android:background="@android:color/transparent"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/arrow_up"
                    tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:text="Title"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/music_title_bar"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="music_genre"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:id="@+id/music_genre_bar" />
            </LinearLayout>
        </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:gravity="center"
            android:background="#FFF"
            android:orientation="horizontal">

    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:orientation="horizontal"
            android:background="#000">

        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/seek_bar_design"
                android:layout_alignParentTop="true"
                android:thumbTint="#FFFFFF"
                android:progressTint="#FFFFFF" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_point"
                android:text="00:00"
                android:textSize="11sp"
                android:padding="2dp"
                android:textColor="#FFFFFF"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@id/seek_bar_design" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/end_point"
                android:text="00:00"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/seek_bar_design"/>
        <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/play_pause_btn"
                android:src="@drawable/pause_circle"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true" />

    </RelativeLayout>
</LinearLayout>